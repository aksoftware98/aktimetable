@page "/timetable" 
@page "/" 

<div class="container">
    <h2>Welcome to AK Timetable v0.1 <span class="badge bg-success">Preview</span></h2>

    <div class="row">
        <div class="col-sm-12 col-lg-8">
            <div class="row">
                <div class="col-3">
                    <button class="btn btn-success">Save</button>
                </div>
                <div class="col-3">
                    <button class="btn btn-dark">Remove</button>
                </div>
                <div class="col-3">
                    <button class="btn btn-info">Load</button>
                </div>
            </div>
            
            <!-- Timetable -->
            <div class="row">
                <div class="col-12">
                    <AKTimetable @ref="_timetable" />
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-lg-4">
          <WorkItemsList WorkItemSelect="OnSelectWorkItem" />
        </div>
    </div>
</div>