
<div class="row">
    <div class="col-3 m-2">
        <button class="btn btn-success btn-block" @onclick="ToggleForm">+</button>
    </div>
    <div class="col-3 m-2">
        <button class="btn btn-danger btn-block" disabled="@(_selectedModel == null)">Remove</button>
    </div>
    <div class="col-3 m-2">
        <button class="btn btn-primary btn-block" @onclick="SaveAsync">Save</button>
    </div>
</div>

@if (_isFromShown)
{
    <div class="row">
        <WorkItemForm OnFormSubmitted="OnFormSubmitted" Model="_selectedModel" />
    </div>
}

<div class="row">
    <div class="col-12">
        <ListView Items="_workItems" @bind-SelectedItem="_selectedModel">
            <ItemTemplate>
               <WorkItemCard WorkItem="@context" />
            </ItemTemplate>
        </ListView>
    </div>
</div>
